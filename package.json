{
    "name": "craft-starter",
    "version": "1.0.0",
    "author": "Jeff Glenn",
    "license": "ISC",
    "description": "Starter Project for Craft CMS 5 using Vite 6 and Tailwind 4",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "lint": "eslint src/ --ext .js,.ts",
        "lint:fix": "eslint src/ --ext .js,.ts --fix",
        "format": "prettier --write src/",
        "format:check": "prettier --check src/",
        "type-check": "tsc --noEmit",
        "clean": "rm -rf web/dist node_modules/.vite",
        "fresh": "npm run clean && npm install && npm run build"
    },
    "devDependencies": {
        "@eslint/js": "^9.0.0",
        "@types/alpinejs": "^3.13.0",
        "eslint": "^9.0.0",
        "prettier": "^3.0.0",
        "typescript": "^5.3.0",
        "vite": "^6.3.5"
    },
    "dependencies": {
        "@fancyapps/ui": "^6.0.1",
        "@tailwindcss/vite": "^4.1.10",
        "alpinejs": "^3.14.9",
        "gsap": "^3.13.0",
        "swiper": "^11.2.8",
        "tailwindcss": "^4.1",
        "vite-plugin-compression": "^0.5.1",
        "vite-plugin-restart": "^0.4.2"
    }
}
